/* pages/contact/contact.wxss */
.personnel {
  width: 96%;
  margin: 20rpx auto;
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid dimgrey;
}

.personnel.last {
  border-bottom: none;
}

.personnel .title {
  font-size: 35rpx;
  font-weight: 550;
  margin-bottom: 20rpx;
}

.personnel .individual {
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
}

.individual .img {
  width: 130rpx;
  height: 130rpx;
  border-radius: 10rpx;
}

.individual .detail {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  flex-grow: 1;
  margin-left: 16rpx;
}