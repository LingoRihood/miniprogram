/* pages/notice/notice.wxss */
.container {
  width: 92%;
  margin: 20rpx auto;
}

.container .notice-item {
  display: flex;
  height: 180rpx;
  flex-direction: row;
  width: 100%;
  background-color: white;
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  margin-bottom: 20rpx;
}

.notice-item .bar {
  border-left: 16rpx solid indigo;
  margin-right: 40rpx;
}

.notice-item .content {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  flex-grow: 1;
}

.content .title {
  font-size: 36rpx;
  font-weight: 550;
}

.content .time {
  color: #666;
}