<!--pages/modifypwd/modifypwd.wxml-->
<view style="width: 100%; height: 100rpx;"></view>
 
<view class="accountbox">
  <view class="boxitem">
    <view class="term">原密码：</view>
    <input class="content" bindinput="onrawPwd" placeholder="请输入原始密码" bindblur="onRaw"></input>
    <icon wx:if="{{rawflag}}" type="success_no_circle"></icon>
    <icon wx:if="{{rawflagerr}}" type="cancel"></icon>
  </view>
  <view class="boxitem">
    <view class="term">新密码：</view>
    <input class="content" bindinput="onnewPwd" placeholder="请输入新密码" bindblur="onNew"></input>
    <icon wx:if="{{newflag}}" type="success_no_circle"></icon>
    <icon wx:if="{{newflagerr}}" type="cancel"></icon>
  </view>
  <view class="boxitem">
    <view class="term">确认密码：</view>
    <input class="content" bindinput="onconfirmPwd" placeholder="请再次输入新密码" bindblur="onConfirm"></input>
    <icon wx:if="{{confirm}}" type="success_no_circle"></icon>
    <icon wx:if="{{confirmerr}}" type="cancel"></icon>
  </view>
  <view style="color:#293462; margin-top: 50rpx; margin-bottom: 36rpx;">注意：新密码要以数字开头,长度在6~18之间,只能包含字母、数字和下划线,且与原密码不同</view>
  <button type="primary" bindtap="submit">确认修改</button>
</view>
