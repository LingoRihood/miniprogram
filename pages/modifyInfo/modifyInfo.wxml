<!--pages/modifyInfo/modifyInfo.wxml-->
<view style="width: 100%; height: 100rpx;"></view>
 
<view class="accountbox">
  <view class="boxitem">
    <view class="term">姓名：</view>
    <view class="content">{{myname}}</view>
  </view>
  <view class="boxitem">
    <view class="term">电话：</view>
    <input type="number" 	maxlength="11" class="content" value="{{myphone}}" bindinput="onModify"></input>
  </view>
  <view class="boxitem">
    <view class="term">单元：</view>
    <view class="content">{{mysection}}</view>
  </view>
  <view class="boxitem">
    <view class="term">房室：</view>
    <view class="content">{{myhouse}}</view>
  </view>
  <view class="boxitem">
    <view class="term">管理员：</view>
    <view class="content" wx:if="{{isAdmin == true}}">是</view>
    <view class="content" wx:if="{{isAdmin == false}}">否</view>
  </view>
  <button type="primary" bindtap="onCertain">确认修改</button>
</view>
