.containerbox {
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.containerbox .permissionbox {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 666rpx;
  height: 400rpx;
  background: rgba(0, 0, 0, .8);
  box-shadow: 0 6rpx 15rpx 6rpx rgba(0, 0, 0, .5);
  border-radius: 10rpx;
  box-sizing: border-box;
}

