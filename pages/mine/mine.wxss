/* pages/mine/mine.wxss */
.top {
  width: 100%;
  height: 300rpx;
}

/* 用户头像背景区域样式 */
.top image {
  width: 100%;
  height: 100%;
}

/* 用户头像昵称样式 */
.mylogo {
  /* 清除浮动 */
  /* overflow: hidden; */
  width: 100%;
  height: 300rpx;
  margin-top: -300rpx;
  text-align: center;
}

.mine-login {
  margin-top: -100rpx;
}

.mylogo .mylogo_photo .face{
  text-align: center;
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx auto 10rpx;
  border-radius: 50%;
}

.mylogo_name {
  text-align: center;
  font-weight: 600;
  font-size: 36rpx;
  color: bisque;
}

/* 功能模块样式 */
.function {
  margin: 30rpx auto;
}

.function-item {
  display: flex;
  width: 98%;
  height: 100rpx;
  margin: 5rpx auto;
  box-sizing: border-box;
  /* border-bottom: 1px solid #e4e4e4; */
}

.function-item .function-img {
  flex: 1;
  padding: 12rpx 30rpx 6rpx 12rpx;
}

.function-item .function-img image {
  width: 100%;
}

.function-item .funcInfo {
  flex: 8;
  line-height: 96rpx;
}

.function-item .arrow {
  flex: 1;
}

.function-item .arrow image {
  width: 80%;
  margin: 20rpx auto 10rpx;
}